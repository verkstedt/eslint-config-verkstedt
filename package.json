{
  "name": "@verkstedt/lint",
  "version": "11.0.0-rc.4",
  "description": "Linting configuration for verkstedt projects",
  "keywords": [
    "lint",
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "stylelint",
    "prettier"
  ],
  "author": "verkstedt GmbH <info@verkstedt.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/verkstedt/lint.git"
  },
  "homepage": "https://www.npmjs.com/package/@verkstedt/lint",
  "bugs": {
    "url": "https://verkstedt.atlassian.net/jira/software/projects/VIP/boards/12"
  },
  "bin": {
    "verkstedt-lint-setup": "./install.sh"
  },
  "type": "module",
  "engines": {
    "node": ">=24.12.0"
  },
  "files": [
    "esm/",
    "typescript/",
    "install.sh",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./tsconfig": "./typescript/tsconfig.base.json",
    "./eslint": {
      "import": {
        "types": "./esm/eslint/index.d.ts",
        "default": "./esm/eslint/index.js"
      }
    },
    "./prettier": {
      "import": {
        "types": "./esm/prettier/index.d.ts",
        "default": "./esm/prettier/index.js"
      }
    }
  },
  "workspaces": [
    ".",
    "test/001-js",
    "test/002-ts",
    "test/003-react",
    "test/004-next.js",
    "test/005-css-modules"
  ],
  "scripts": {
    "prepublishOnly": "npm run --silent holistic-check",
    "prepare": "npm run build",
    "lint": "npm-run-all --print-name --print-label 'lint:*'",
    "lint:js": "eslint .",
    "lint:ts": "tsc --noEmit",
    "lint:pkg": "./scripts/lint-package-json.ts",
    "lint:node": "./scripts/lint-node.ts",
    "test": "npm-run-all --print-name --print-label 'test:*'",
    "test:eslint-prettier": "eslint-config-prettier eslint.config.ts",
    "pretest:unit": "npm run build",
    "test:unit": "npm run --workspaces --if-present 'test:unit:test'",
    "build": "npm-run-all --print-name --print-label 'build:*'",
    "build:ts": "tsc",
    "build:copy": "mkdir -p esm/ && cp -r prettier/.prettierignore esm/prettier/",
    "holistic-check": "npm-run-all --print-name --print-label 'lint:!(ts)' build 'test:*'"
  },
  "peerDependencies": {
    "eslint": ">=9.39.2",
    "eslint-config-next": ">=16.0.10",
    "eslint-import-resolver-typescript": ">=3.5.2",
    "eslint-plugin-lingui": ">=0.11.0",
    "eslint-plugin-react": ">=7.37.5",
    "eslint-plugin-react-hooks": ">=7.0.1",
    "eslint-plugin-storybook": ">=10.1.9",
    "jiti": ">=2.6.1",
    "prettier": ">=3.7.4",
    "typescript": ">=5.9.3",
    "typescript-eslint": ">=8.50.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    },
    "eslint-config-next": {
      "optional": true,
      "note": "Required if you are using Next.js."
    },
    "eslint-import-resolver-typescript": {
      "optional": true,
      "note": "Required if you are using TypeScript."
    },
    "eslint-plugin-lingui": {
      "optional": true,
      "note": "Required if you are using LinguiJS."
    },
    "eslint-plugin-react": {
      "optional": true,
      "note": "Required if you are using React."
    },
    "eslint-plugin-react-hooks": {
      "optional": true,
      "note": "Required if you are using React."
    },
    "eslint-plugin-storybook": {
      "optional": true,
      "note": "Required if you are using Storybook."
    },
    "jiti": {
      "optional": true,
      "note": "Required if you are using TypeScript (for evaluating eslint.config.ts)."
    },
    "prettier": {
      "optional": true,
      "note": "We use prettier rules as part of EsLint, but it can also be ran separately."
    },
    "typescript": {
      "optional": true,
      "note": "Required if you are using TypeScript."
    },
    "typescript-eslint": {
      "optional": true,
      "note": "Required if you are using TypeScript."
    }
  },
  "devDependencies": {
    "@eslint/core": "^1.0.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24 <=24.12.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.0.10",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-lingui": "^0.11.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "^10.1.9",
    "jiti": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.50.0"
  },
  "dependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/css": "^0.14.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "deepmerge": "^4.3.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-exports": "^1.0.0-beta.5",
    "eslint-plugin-css-modules": "^2.12.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "typescript": "^5.9.3"
  },
  "config": {
    "setup-repo-version": "1.1.5+git.48e2424",
    "setup-repo-is-frontend": "No"
  }
}
